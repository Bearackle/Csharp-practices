@{
    Layout = null;
}
@model IEnumerable<MyEcommerce.Domain.Entities.Product>

@foreach (var p in Model)
{
    <div class="row g-2">
        <div class="col-6 col-sm-4 col-md-3">
            <div class="card">
                <img src="@Url.Content(p.Images.FirstOrDefault().ImagePath)" class="card-img-top" style="width: 100%; height: 80px; object-fit: contain; border-radius: 8px; " />
                <div class="card-body p-2">
                    <div class="small">@p.ProductName</div>
                    <div class="text-danger fw-bold">
                        @{
                            // format price safely
                            var price = 0M;
                            try { price = Convert.ToDecimal(p.Price); } catch { price = 0M; }
                        }
                        @price.ToString("N0") đ
                    </div>
                    <div class="progress" style="height:6px">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 60%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}