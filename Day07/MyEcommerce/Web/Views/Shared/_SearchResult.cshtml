@{
    Layout = null;
}

@model IEnumerable<MyEcommerce.Domain.Entities.Product>

@if (!Model.Any())
{
    <div class="p-2 text-muted">Không tìm thấy sản phẩm.</div>
}
else
{
    <ul class="list-group list-group-flush">
        @foreach (var p in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Details", "Products", new { id = p.ProductId})" class="text-decoration-none text-dark d-flex align-items-center">
                    <img src="@(string.IsNullOrWhiteSpace(p.Images.First().ImagePath) ? Url.Content("~/Content/images/placeholder.png") : p.Images.First().ImagePath)" alt="@p.ProductName" class="me-2 rounded" style="width:40px; height:40px; object-fit:cover;" />
                    <span>@p.ProductName</span>
                </a>
            </li>
        }
    </ul>
}