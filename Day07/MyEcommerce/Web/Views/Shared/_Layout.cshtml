<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/logo.png" alt="Logo" style="height:36px; width:auto; margin-right:8px;" />
                    <strong>Bách hóa</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">@Html.ActionLink("Sản phẩm", "Index", "Products", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Về cửa hàng", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>

                    <form class="d-flex me-3 position-relative" method="get" action="@Url.Action("ProductFilter", "Products")" role="search">
                        <input id="searchBox" class="form-control me-2" type="search" name="Key" placeholder="Tìm sản phẩm, thương hiệu..." aria-label="Search" />
                        <div id="searchResults" class="position-absolute bg-white border rounded shadow-sm mt-1 w-100"
                             style="z-index: 1000; display:none;">
                        </div>
                        <button class="btn btn-outline-light" type="submit">
                            Tìm
                        </button>
                    </form>

                    <div class="d-flex align-items-center">
                        <a class="btn btn-outline-light me-2 position-relative" href="@Url.Action("Index", "Carts")" title="Giỏ hàng">
                            <i class="bi bi-cart3"></i> Giỏ hàng
                            <span id="CartCount" class="badge bg-danger position-absolute top-0 start-100 translate-middle"
                                  style="font-size:0.7rem;">
                                @ViewBag.CartCount
                            </span>
                        </a>
                    </div>
                    @Html.Partial("_LoginPartial", "Carts")
                </div>
            </div>
        </nav>

        <div class="bg-light py-4 shadow-sm winter-promo">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-0"> @ViewBag.PageHeading</h1>
                    <small class="fs-4 fw-semibold" style="color: #e8f5ff;">Sản phẩm chất lượng <br /> Giao hàng nhanh</small>
                </div>
                <img src="@Url.Content("~/Content/Images/promo-winter-02.jpg")" alt="Khuyến mãi mùa đông"
                     class="img-fluid rounded shadow-sm mb-1" style="max-height:200px;" />
                <div class="d-none d-md-block" style="min-width: 300px;">
                    <div class="winter-promo">

                        <div class="d-flex align-items-center gap-4">
                            <div>
                                <h5 class="text-white mb-3 d-flex align-items-center">
                                    <i class="bi bi-snow2 me-2"></i>
                                    Lễ hội mùa đông 2025
                                    <i class="bi bi-snow2 ms-2"></i>
                                </h5>
                                <div class="countdown-container">
                                    <div class="countdown-item">
                                        <span id="days" class="countdown-value">00</span>
                                        <span class="countdown-label">Ngày</span>
                                    </div>
                                    <div class="countdown-item">
                                        <span id="hours" class="countdown-value">00</span>
                                        <span class="countdown-label">Giờ</span>
                                    </div>
                                    <div class="countdown-item">
                                        <span id="minutes" class="countdown-value">00</span>
                                        <span class="countdown-label">Phút</span>
                                    </div>
                                    <div class="countdown-item">
                                        <span id="seconds" class="countdown-value">00</span>
                                        <span class="countdown-label">Giây</span>
                                    </div>
                                </div>
                            </div>
                            <a href="#" class="promo-button">
                                <span>Xem ưu đãi</span>
                                <small class="d-block">Giảm đến 70%</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6>MyEcommerce</h6>
                    <p class="small text-muted mb-0">© @DateTime.Now.Year MyEcommerce. All rights reserved.</p>
                </div>
                <div class="col-md-3 mb-3">
                    <h6>Hỗ trợ</h6>
                    <ul class="list-unstyled small">
                        <li>@Html.ActionLink("Chính sách", "Privacy", "Home", new { area = "" }, new { @class = "text-light" })</li>
                        <li>@Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "text-light" })</li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3 text-md-end">
                    <h6>Follow</h6>
                    <div class="small">
                        <a class="text-light me-2" href="#" aria-label="facebook">Facebook</a>
                        <a class="text-light" href="#" aria-label="instagram">Instagram</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <style>
        .winter-promo {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            padding: 20px 25px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .snowfall {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/png;base64,') repeat;
            pointer-events: none;
            animation: snow 20s linear infinite;
            opacity: 0.7;
        }

        .countdown-container {
            display: flex;
            gap: 12px;
            font-family: 'Arial', sans-serif;
        }

        .countdown-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            background: rgba(255,255,255,0.15);
            padding: 8px 12px;
            border-radius: 8px;
            min-width: 65px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255,255,255,0.2);
        }
        #searchResults {
            top: 100%; /* ngay dưới input */
            left: 0;
            width: 100%; /* bằng input */
            display: none; /* mặc định ẩn */
            z-index: 1000;
        }
        .countdown-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #fff;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .countdown-label {
            font-size: 0.75rem;
            color: rgba(255,255,255,0.9);
        }

        .promo-button {
            background: #fff;
            color: #1e3c72;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            text-align: center;
            font-weight: 600;
            transition: all 0.3s ease;
            animation: pulse 2s infinite;
        }

            .promo-button:hover {
                background: #f8f9fa;
                color: #1e3c72;
                transform: translateY(-2px);
            }

        @@keyframes fall {
            0% {
                transform: translateY(0) translateX(0) rotate(0deg);
                opacity: 0.8;
            }

            100% {
                transform: translateY(100vh) translateX(50px) rotate(360deg);
                opacity: 0.2;
            }
        }

        @@keyframes snow {
            0% {
                background-position: 0px 0px;
            }

            100% {
                background-position: 500px 500px;
            }
        }

        .snowflake {
            position: absolute;
            top: -10px;
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
            opacity: 0.8;
            animation-name: fall;
            animation-timing-function: linear;
            animation-iteration-count: infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .bi-snow2 {
            animation: rotate 3s linear infinite;
            display: inline-block;
        }

        @@keyframes rotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    </style>

    <script>
        function updateCountdown() {
            const christmas = new Date(2025, 11, 25);
            const now = new Date();
            const diff = christmas - now;

            if (diff > 0) {
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            }
        }

        setInterval(updateCountdown, 1000);
        updateCountdown();

        const snowfall = document.getElementById('snowfall');
        const numberOfFlakes = 50;

        for (let i = 0; i < numberOfFlakes; i++) {
            const flake = document.createElement('div');
            flake.classList.add('snowflake');

            // Vị trí ngang ngẫu nhiên
            flake.style.left = Math.random() * 100 + 'vw';

            // Kích thước ngẫu nhiên
            const size = Math.random() * 5 + 5; // 5px - 10px
            flake.style.width = size + 'px';
            flake.style.height = size + 'px';

            // Tốc độ rơi ngẫu nhiên
            flake.style.animationDuration = (Math.random() * 10 + 5) + 's'; // 5s - 15s

            // Độ trễ ngẫu nhiên
            flake.style.animationDelay = Math.random() * 10 + 's';

            //   snowfall.appendChild(flake);
        }

    </script>
    <script>
const searchUrl = '@Url.Action("SearchProduct", "Products")';

$(document).ready(function () {
    let timer;
    // Dùng delegated event
        $(document).on("input", "#searchBox", function () {
            console.log("pop-up active"); // chắc chắn sẽ chạy
            clearTimeout(timer);

            let query = $(this).val().trim();
            if (query.length < 2) {
                $("#searchResults").hide();
                return;
            }

            timer = setTimeout(function () {
                $.ajax({
                    url: searchUrl,
                    type: 'GET',
                    data: { Key: query },
                    success: function (response) {
                        $("#searchResults").html(response).show();
                    },
                    error: function(err) {
                        console.error(err);
                    }
                });
            }, 300);
        });

        $(document).click(function (e) {
            if (!$(e.target).closest("#searchBox, #searchResults").length) {
                $("#searchResults").hide();
            }
        });
    });
    </script>
</body>
</html>

@section scripts
    {
    
}