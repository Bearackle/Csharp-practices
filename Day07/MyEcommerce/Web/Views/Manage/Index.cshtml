@model MyEcommerce.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<main class="container py-5" aria-labelledby="title">
    <h2 id="title" class="mb-4 text-primary">@ViewBag.Title</h2>

    @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">Change your account settings</h4>
            <hr />

            <dl class="row mb-0">
                <dt class="col-sm-3">Password:</dt>
                <dd class="col-sm-9">
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Thay đổi mật khẩu", "ChangePassword", null, new { @class = "btn btn-link p-0" })
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword", null, new { @class = "btn btn-link p-0" })
                    }
                </dd>

                <dt class="col-sm-3">External Logins:</dt>
                <dd class="col-sm-9">
                    @Model.Logins.Count 
                    @Html.ActionLink("Kiểm tra", "ManageLogins", null, new { @class = "btn btn-link p-0" })
                </dd>

                @* Uncomment when phone number logic is ready *@
                @*
                    <dt class="col-sm-3">Phone Number:</dt>
                    <dd class="col-sm-9">
                        @(Model.PhoneNumber ?? "None")
                        ...
                    </dd>
                *@

                @*<dt class="col-sm-3">Two-Factor Authentication:</dt>
                <dd class="col-sm-9">
                    <p class="mb-1">
                        There are no two-factor authentication providers configured.
                        See <a href="https://go.microsoft.com/fwlink/?LinkId=403804" target="_blank">this article</a>
                        for details on setting up two-factor authentication.
                    </p>
                </dd>*@
            </dl>
        </div>
    </div>
</main>
