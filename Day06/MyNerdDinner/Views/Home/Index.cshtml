@{
    ViewBag.Title = "Nerd Dinner";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<table>
    <tr>
        <td>
            <article>
                <h3>Find a Dinner</h3>
                <div id="map" style="position: relative; width: 580px; height: 400px;">
                </div>
            </article>
        </td>
        <td style="padding: 100px;">
            <article>
                <h3>Get what you want</h3>
                <ul>
                    <li>@Html.ActionLink("Get All Dinner","Index","Dinner")</li>
                    <li>@Html.ActionLink("Upcomming Dinners", "WebSliceUpcoming","Dinner")</li>
                    <li>@Html.ActionLink("Popular Dinners", "WebSlicePopular","Dinner")</li>
                </ul>
            </article>
        </td>
    </tr>
</table>
<aside>
    <div>
        <div id="searchBox">
            <div class="search-text">
                Enter your location or <strong>@Html.ActionLink("View All Upcoming Dinners", "Index", "Dinners")</strong>.
            </div>
            @Html.TextBox("SearchLocation")
            <input id="search" type="submit" value="Search" />
        </div>
    </div>
